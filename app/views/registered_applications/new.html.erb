<div class="col-md-8">
  <%= form_for(@app, url: registered_applications_path, method: :post) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Enter registration name", class: 'form-control' %>
    </div>

    <br/>

    <%= f.label :url%>
    <%= f.text_field :url, placeholder: "Enter application URL", class: "form-control" %>

    <br/>

    <%= f.submit %>

  <% end %>
</div>  
